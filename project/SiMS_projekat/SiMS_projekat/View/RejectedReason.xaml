<Window x:Class="SiMS_projekat.View.RejectedReason"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiMS_projekat.View"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="RejectedReason" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="38,32,0,0" TextWrapping="Wrap" Text="Reason for refusal:" VerticalAlignment="Top"/>
        <TextBox x:Name="acceptTextBox" HorizontalAlignment="Left" Height="118" Margin="38,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button x:Name="acceptBtn" Content="Accept" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="75" Click="acceptBtn_Click"/>

    </Grid>
</Window>
