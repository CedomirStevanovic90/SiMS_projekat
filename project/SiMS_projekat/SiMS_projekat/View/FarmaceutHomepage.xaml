<Window x:Class="SiMS_projekat.View.FarmaceutHomepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiMS_projekat.View"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="FarmaceutHomepage" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="40" TextWrapping="Wrap" Text="Choose one of the offered options:" VerticalAlignment="Top" FontSize="25"/>
        <Button x:Name="medicinesBtn" Content="Display all medications" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="284" Height="74" FontSize="20" Click="medicinesBtn_Click"/>
        <Button x:Name="medicinesOnHoldBtn" Content="Display all medications on hold" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Width="284" Height="74" FontSize="20" Click="medicinesOnHoldBtn_Click"/>
    </Grid>
</Window>
